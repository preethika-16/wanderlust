<style>
    #filters{
        display: flex;
        flex-wrap: nowrap;
        align-items: center;
    }
    .filter{
        margin-top: 2rem;
        text-align: center;
        margin-right: 2rem;
        opacity: 0.7;
    }
    .filter a {
        color: #000;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter p {
        font-size: 0.8rem;
    }
    .tax-info {
        display: none;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.2rem;
        width: 20rem;
        padding: 1rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        max-width: 90vw;
        flex: 0 0 auto;  
    }
    #filters {
        scrollbar-width: none;    
    }
    #filters::-webkit-scrollbar {
        display: none;
    }
    
</style>

<div id="filters" class="d-flex overflow-auto">
    <div class="filter">
        <a href="/listings/category/trending"><div><i class="fa-solid fa-fire"></i></div></a>
        <p>Trending</p>
    </div>
    <div class="filter">
        <a href="/listings/category/rooms"><div><i class="fa-solid fa-bed"></i></div></a>
        <p>Rooms</p>
    </div>
    <div class="filter">
        <a href="/listings/category/iconiccities"><div><i class="fa-solid fa-mountain-city"></i></div></a>
        <p>Iconic Cities</p>
    </div>
    <div class="filter">
        <a href="/listings/category/mountains"><div><i class="fa-solid fa-mountain"></i></div></a>
        <p>Mountains</p>
    </div>
    <div class="filter">
        <a href="/listings/category/castles"><div><i class="fa-solid fa-fort-awesome"></i></div></a>
        <p>Castles</p>
    </div>
    <div class="filter">
        <a href="/listings/category/arctic"><div><i class="fa-solid fa-snowflake"></i></div></a>
        <p>Arctic</p>
    </div>
    <div class="filter">
        <a href="/listings/category/camping"><div><i class="fa-solid fa-campground"></i></div></a>
        <p>Camping</p>
    </div>
    <div class="filter">
        <a href="/listings/category/farms"><div><i class="fa-solid fa-cow"></i></div></a>
        <p>Farms</p>
    </div>
    <div class="filter">
        <a href="/listings/category/domes"><div><i class="fa-solid fa-igloo"></i></div></a>
        <p>Domes</p>
    </div>
    <div class="filter">
        <a href="/listings/category/boats"><div><i class="fa-solid fa-ship"></i></div></a>
        <p>Boats</p>
    </div>
    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
        </div>   
    </div>
    
</div>


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <%for(let listing of allListings){%>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%= listing.image.url %>" 
                class="card-img-top" 
                alt="listing_img" 
                style="height:20rem">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <!-- <h5 class="card-title">Card title</h5> -->
                    <p class="card-text"><b><%= listing.title %></b>
                        <br>
                        &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
                        &nbsp;&nbsp; <i class="tax-info">+18% GST</i>
                    </p>
                    <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                </div>
            </div>
        </a>
    <% } %>
</div>

<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display!= "inline"){
                info.style.display = "inline";
            }else{
                info.style.display = "none";
            }
            
        }
    })  
</script>